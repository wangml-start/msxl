<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="register_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="register_label">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="register_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">30</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlNormal">@null</item>
        <item name="colorControlActivated">@null</item>
    </style>

    <style name="trade_buy_sell">
        <item name="android:textSize">@dimen/LargeSize</item>
        <item name="android:background">@drawable/txt_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="trading_page_btns">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/train_page_bg</item>
    </style>

</resources>