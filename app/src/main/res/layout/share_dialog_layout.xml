<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:net_image="http://schemas.android.com/apk/res/com.cgmn.msxl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">
    <LinearLayout
            android:id="@+id/comment_parent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.cgmn.msxl.comp.view.NetImageView
                android:id="@+id/im_chart"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                net_image:image_type="0"
                net_image:image_size="large"
                />
        <EditText
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="12dp"
                android:background="@drawable/edittext_border"
                android:gravity="left|top"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="@dimen/size15" />
        <Button
                android:id="@+id/txt_publish"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bt_back_nomal"
                android:text="分享"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size16" />
    </LinearLayout>

</LinearLayout>