<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


    <!--top bar-->
    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@id/lb_open_div"
            android:layout_marginTop="3dp"
            android:background="@color/div_white" />


    <LinearLayout
            android:id="@+id/lb_open_div"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg_white"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/lb_open_price"
                style="@style/kline_top_bar" />

        <TextView
                android:id="@+id/lb_left_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wating.." />

        <TextView
                android:id="@+id/lb_close_price"
                style="@style/kline_top_bar" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lb_close_div"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@color/bg_white"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/lb_open_rate"
                style="@style/kline_top_bar" />

        <TextView
                android:id="@+id/lb_left_s"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center" />

        <TextView
                android:id="@+id/lb_close_rate"
                style="@style/kline_top_bar" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/lb_close_div"
            android:background="@color/div_white" />
    <!--top bar-->

    <!--k line -->
    <LinearLayout
            android:id="@+id/chart_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/bg_white"
            android:orientation="vertical" />

    <View
            android:id="@+id/div_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@id/ly_tab_bar"
            android:background="@color/div_white" />
    <!--k line -->

    <!--stock holder -->
    <LinearLayout
            android:id="@+id/holder_parent"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/bg_white"
            android:orientation="vertical">

    </LinearLayout>
    <!--stock holder -->

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/ly_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical">

            <Button
                    android:id="@+id/bt_change"
                    android:text="@string/change_stock"
                    style="@style/trading_page_btns"
                     />

            <Button
                    android:id="@+id/bt_exit"
                    style="@style/trading_page_btns"
                    android:text="@string/exit_stock"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ly_bottom_right"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/bg_white"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <Button
                        android:id="@+id/bt_next"
                        android:layout_width="match_parent"
                        android:text="@string/next"
                        style="@style/trading_page_btns"
                         />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/bt_buy"
                        android:background="@drawable/bt_bg_selector"
                        android:text="@string/trade_buy"
                        style="@style/trading_page_btns"
                         />

                <Button
                        android:id="@+id/bt_sell"
                        android:text="@string/trade_sell"
                        style="@style/trading_page_btns" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/pop_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_white"
            android:orientation="horizontal" />


</LinearLayout>