<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical"
        tools:context=".ac.VIPActivity">

    <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/vip_user_back">

        <com.cgmn.msxl.comp.view.NetImageView
                android:id="@+id/icon_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_head"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_u_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="用户名"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/smallSize" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                     />

            <TextView
                    android:id="@+id/txt_des"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="您还没开通Level权限"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/smallSize" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@color/bg_white">

        <LinearLayout
                android:id="@+id/line_level1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/center"
                android:background="@drawable/bt_vip_back"
                android:focusable="true"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Level1"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/NormalSize" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="趋势波段训练"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/size12" />
        </LinearLayout>

        <View
                android:id="@+id/center"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@color/bg_white" />

        <LinearLayout
                android:id="@+id/line_level2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/center"
                android:background="@drawable/bt_bg_selector"
                android:clickable="true"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Level2"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/NormalSize" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="趋势波段训练+连板战法训练"
                    android:textColor="@color/main_bg_orange_light"
                    android:textSize="@dimen/size12" />
        </LinearLayout>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/bg_white" />

    <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

    <TextView
            android:clickable="false"
            android:id="@+id/txt_gain"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:text="首次开通赠送20万操盘资金"
            android:textColor="@color/main_bg_orange_light"
            android:textSize="@dimen/size16" />
    <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/bg_white" />
    <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            >
        <TextView
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:textSize="@dimen/NormalSize"
                android:gravity="center"
                android:text="@string/vip_pay"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bt_back_nomal"
                android:textColor="@color/main_text_color"/>
    </RelativeLayout>

</LinearLayout>