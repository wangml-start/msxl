<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sw="http://schemas.android.com/apk/res/com.cgmn.msxl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    tools:context=".ac.KLineSettingActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="第一指标"/>
        <TextView
            android:id="@+id/txt_first_dex_list"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/options_bg"
            android:drawableRight="@drawable/down"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="第二指标"/>
        <TextView
            android:id="@+id/txt_second_dex_list"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/options_bg"
            android:drawableRight="@drawable/down"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size14" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textColor="@color/colorPrimary"
            android:text="自动读秒"/>

        <com.cgmn.msxl.comp.swb.SwitchButton
            android:id="@+id/bt_sw"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:gravity="center"
            sw:switch_bg_color="@color/text_hint" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="趋势波段读秒时间"/>

        <LinearLayout
            android:id="@+id/count_layout"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count_minus"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                style="@style/trade_buy_sell"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="－"
                />
            <TextView
                android:id="@+id/et_count"
                android:inputType="numberDecimal"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:textSize="@dimen/size16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/count_plus"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                style="@style/trade_buy_sell"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="＋"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="秒"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="连板训练读秒时间"/>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count_minus_lb"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                style="@style/trade_buy_sell"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="－"
                />
            <TextView
                android:id="@+id/et_count_lb"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="@dimen/size16"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/count_plus_lb"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                style="@style/trade_buy_sell"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="＋"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:text="秒"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@color/div_white"
        />
</LinearLayout>