<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

    <include layout="@layout/edit_detail_header" />


    <RelativeLayout
            android:id="@+id/first_relative"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_topbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/man" />

        <ImageView
                android:id="@+id/img_man"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                 />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_below="@id/first_relative"
            android:layout_height="2px"
            android:layout_marginLeft="35dp"
            android:background="@color/div_white" />

    <RelativeLayout
            android:id="@+id/last_relative"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_topbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="@string/weman" />

        <ImageView
                android:id="@+id/img_weman"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                 />
    </RelativeLayout>

</LinearLayout>