<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ac.MarketTrendActivity">

    <View
            android:id="@+id/top_div"
            android:layout_width="match_parent"
            android:layout_height="8px"
            android:background="@color/bg_white" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/top_div"
            android:layout_marginTop="2dp"
            android:clipToPadding="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">
        <!--top bar-->
        <LinearLayout
                android:id="@+id/lb_open_div"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_white"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/lb_open_price"
                    style="@style/kline_top_bar" />

            <TextView
                    android:id="@+id/lb_last_rate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Wating.."
                    android:textColor="@color/text_topbar"
                    android:textSize="@dimen/size12" />

            <TextView
                    android:id="@+id/lb_close_price"
                    style="@style/kline_top_bar"
                    android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lb_close_div"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:background="@color/bg_white"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/lb_open_rate"
                    style="@style/kline_top_bar" />

            <TextView
                    android:id="@+id/lb_left_day"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Wating.."
                    android:textColor="@color/text_topbar"
                    android:textSize="@dimen/size12" />

            <TextView
                    android:id="@+id/lb_close_rate"
                    style="@style/kline_top_bar"
                    android:layout_marginRight="15dp" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/lb_close_div"
                android:background="@color/div_white" />
        <!--top bar-->

        <!--k line -->
        <LinearLayout
                android:id="@+id/chart_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/bg_white"
                android:orientation="vertical" />
        <!--k line -->

        <!-- 筛选-->
        <LinearLayout
                android:id="@+id/filter_tool"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/bg_white"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt_day_list"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableRight="@drawable/down"
                    android:background="@drawable/options_bg"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size14" />
            <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/options_bg"
                    android:drawableRight="@drawable/down"
                    android:textSize="@dimen/size14" />
            <TextView
                    android:id="@+id/txt_vol"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableRight="@drawable/down"
                    android:background="@drawable/options_bg"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size14" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/bg_topbar"
                android:orientation="horizontal" >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="品种"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/size12" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="收盘"
                android:textColor="@color/text_black"
                android:textSize="@dimen/size12" />
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="涨幅"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/size12" />
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="换手率"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/size12" />
        </LinearLayout>
        <!-- list-->
        <ListView
                android:id="@+id/list_content"
                android:divider="@drawable/list_item_divider"
                android:dividerHeight="2dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>