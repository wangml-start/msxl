<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:guide="http://schemas.android.com/apk/res/com.cgmn.msxl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ac.AppMainActivity">

    <LinearLayout
            android:id="@+id/ly_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/div_white"
            android:orientation="horizontal">
        <com.cgmn.msxl.comp.view.GuideIconView
                android:id="@+id/txt_guba"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="4dp"
                guide:icon="@drawable/chat_region"
                guide:text="@string/statistic"
                guide:color="@color/colorAccent"
                guide:text_size="@dimen/miniSize" />
        <com.cgmn.msxl.comp.view.GuideIconView
                android:id="@+id/txt_xunlian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="4dp"
                guide:icon="@drawable/train_item"
                guide:text="@string/tab_menu_xunlian"
                guide:text_size="@dimen/miniSize"
                guide:color="@color/colorAccent"
                />
        <com.cgmn.msxl.comp.view.GuideIconView
                android:id="@+id/txt_may"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:padding="2dp"
                guide:icon="@drawable/user_man"
                guide:text="@string/tab_menu_may"
                guide:color="@color/colorAccent"
                guide:text_size="@dimen/size12" />

    </LinearLayout>

    <View
            android:id="@+id/div_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/div_white"
            android:layout_above="@id/ly_tab_bar"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/div_tab_bar"
            android:id="@+id/ly_content">

    </FrameLayout>

</RelativeLayout>