<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chat_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/comment_parent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/div_white"
            android:orientation="vertical">

        <EditText
                android:id="@+id/dialog_comment_et"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="12dp"
                android:background="@color/div_white"
                android:gravity="left|top"
                android:hint="随便说两句..."
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:textColor="#808080"
                android:textColorHint="#929292"
                android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <Button
                android:id="@+id/dialog_comment_pic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/photo"
                android:textColor="@android:color/white" />

        <TextView
                android:id="@+id/dialog_comment_dis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@id/dialog_comment_pic"
                android:gravity="left|center"
                android:textColor="@color/kline_up"
                android:textSize="@dimen/size12" />

        <Button
                android:id="@+id/dialog_comment_bt"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimary"
                android:text="发布"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size16" />
    </RelativeLayout>

</LinearLayout>